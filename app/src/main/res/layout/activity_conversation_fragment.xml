<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_conversation_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_conversation_user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="会话页面" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_conversation_insert"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:onClick="onClick"
                android:text="插入消息" />

            <TextView
                android:id="@+id/tv_conversation_sendpackage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:onClick="onClick"
                android:text="发送红包" />

            <TextView
                android:id="@+id/tv_chatroom_info"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:onClick="onClick"
                android:text="获取讨论组信息" />

            <TextView
                android:id="@+id/tv_history_msg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:onClick="onClick"
                android:text="获取历史消息" />

            <TextView
                android:id="@+id/tv_yuehoujif"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:onClick="onClick"
                android:text="发送阅后即焚消息" />
        </LinearLayout>
    </HorizontalScrollView>


    <fragment
        android:id="@+id/conversation"
        android:name="io.rong.imkit.fragment.ConversationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--<fragment
        android:id="@+id/conversation"
        android:name="com.wwl.liaoba.cusconversation.ChatConversationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->


</LinearLayout>
